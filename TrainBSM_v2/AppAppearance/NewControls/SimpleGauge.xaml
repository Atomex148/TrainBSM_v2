<UserControl x:Class="TrainBSM_v2.AppAppearance.NewControls.SimpleGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainBSM_v2.AppAppearance.NewControls"
             mc:Ignorable="d">
    <Grid x:Name="MainGrid">
        <Viewbox Stretch="Uniform">
            <Grid Width="150" Height="150">
                <Ellipse x:Name="OuterDial" Width="150" Height="150" Stroke="#FF8B8B8B" StrokeThickness="3" 
                         VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                            <GradientStop Color="#FF6F6F6F" Offset="1"/>
                            <GradientStop Color="#FF393939" Offset="0"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <Canvas x:Name="MainCanvas" Width="150" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Canvas x:Name="ZoneSegmentsCanvas"/>
                    <Canvas x:Name="TicksCanvas"/>
                    <Canvas x:Name="LabelsCanvas"/>
                    <Path x:Name="Needle" Fill="Cyan" Stroke="Black" StrokeThickness="0.5">
                        <Path.Data>
                            <PathGeometry>
                                <PathFigure StartPoint="75,75" IsClosed="True">
                                    <LineSegment Point="72,75"/>
                                    <LineSegment Point="75,125"/>
                                    <LineSegment Point="78,75"/>
                                </PathFigure>
                            </PathGeometry>
                        </Path.Data>
                        <Path.RenderTransform>
                            <RotateTransform x:Name="NeedleRotation" Angle="0" CenterX="75" CenterY="75"/>
                        </Path.RenderTransform>
                    </Path>
                    <Ellipse Width="16" Height="16" StrokeThickness="0" Canvas.Left="67" Canvas.Top="67">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF404040" Offset="0"/>
                                <GradientStop Color="#FF727272" Offset="0.5"/>
                                <GradientStop Color="#FF404040" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                </Canvas>

                <Border x:Name="ValueSign" Margin="85,85,20,40" Background="Black" CornerRadius="3">
                    <TextBlock x:Name="ValueText" Text="0.0" FontWeight="Bold" Foreground="LimeGreen"
                               FontSize="{Binding ValueFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>