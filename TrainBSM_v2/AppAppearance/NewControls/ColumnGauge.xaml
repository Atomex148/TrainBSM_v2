<UserControl x:Class="TrainBSM_v2.AppAppearance.NewControls.ColumnGauge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="80" Height="230">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>

        <Canvas x:Name="LabelsCanvasLeft" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0"
                Height="{Binding ActualHeight, ElementName=InnerGrid, Mode=OneWay}"/>
        <Canvas x:Name="LabelsCanvasRight" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2"
                Height="{Binding ActualHeight, ElementName=InnerGrid, Mode=OneWay}"/>

        <Border Grid.Row="0" Grid.Column="1" CornerRadius="4" BorderThickness="2" BorderBrush="#8B8B8B" Margin="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                    <GradientStop Color="#393939" Offset="0"/>
                    <GradientStop Color="#6F6F6F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid x:Name="InnerGrid" Margin="5">
                <Border BorderThickness="1" BorderBrush="#AAAAAA">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0.5,1" EndPoint="0.5,0">
                            <GradientStop Color="#1F1F1F" Offset="0"/>
                            <GradientStop Color="#404040" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <Rectangle x:Name="FillRectangle" Width="{Binding ActualWidth, ElementName=GlassCanvas}" 
                           Fill="Green" RenderTransformOrigin="0.5,1">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="0" />
                    </Rectangle.RenderTransform>
                </Rectangle>

                <Canvas x:Name="GlassCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </Border>

        <TextBlock x:Name="LabelTextBlock" Grid.Row="1" Grid.Column="1" Text="Sensor" FontSize="12" FontWeight="Bold" 
                   Foreground="#FF424242" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
    </Grid>
</UserControl>