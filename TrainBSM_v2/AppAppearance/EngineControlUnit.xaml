<UserControl x:Class="TrainBSM_v2.AppAppearance.EngineControlUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local_controls="clr-namespace:TrainBSM_v2.AppAppearance.Controls"
             xmlns:new_controls="clr-namespace:TrainBSM_v2.AppAppearance.NewControls"
             mc:Ignorable="d" 
             d:DesignHeight="555" d:DesignWidth="784">
    <Grid>
        <Grid x:Name="MainGrid" Background="#FFE8E8E8" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <new_controls:SimpleGauge Grid.Row="0" Grid.Column="0" x:Name="LoadAtCurrentSpeed" 
                                      SensorName="Нагрузка при текущем напряжении" Value="0.0" MinValue="0" MaxValue="10" 
                                      MajorTicks="11" MinorTicks="3" RedZoneLow="2" YellowZoneLow="4" RedZoneHigh="9" 
                                      YellowZoneHigh="8" Margin="10" IsSignVisible="True" ValueFontSize="14"/>
            <new_controls:ColumnGauge x:Name="FuelRackPosition" Grid.Row="0" Grid.Column="1" Margin="10" Width="60" Height="200"
                                      MinValue="0" MaxValue="100" MajorTicks="3" MinorTicks="1" YellowZoneLow="30" RedZoneLow="10"
                                      RedZoneHigh="90" YellowZoneHigh="75"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" LabelSide="Left"/>
            <new_controls:SquareGauge x:Name="EngineRpm" Grid.Row="0" Grid.Column="2"
                              Value="100" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch"
                              MinValue="-100"
                              MaxValue="100"
                              YellowZoneLow="-50" YellowZoneHigh="60"
                              RedZoneLow="-70" RedZoneHigh="80"
                              SensorName="Топливо %" IsSignVisible="True"
                              ValueFontSize="12" LableFontSize="8"
                              MajorTicks="11"
                              MinorTicks="3"
                              Margin="10"/>
            <local_controls:GaugeControl x:Name="IntakeManifoldPressure" Grid.Row="0" Grid.Column="3" Margin="10"/>
            <local_controls:GaugeControl x:Name="IntakeAirTemperature" Grid.Row="1" Grid.Column="0" Margin="10"/>
            <local_controls:GaugeControl x:Name="CoolantTemperature" Grid.Row="1" Grid.Column="1" Margin="10"/>
            <local_controls:GaugeControl x:Name="OilTemperature" Grid.Row="1" Grid.Column="2" Margin="10"/>
            <local_controls:GaugeControl x:Name="OilPressure" Grid.Row="1" Grid.Column="3" Margin="10"/>

            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Background="LightBlue"  
                    CornerRadius="5" Padding="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Общий пробег, ч" FontSize="12"/>
                    <local_controls:RollingCounter x:Name="HoursCounter" ResetIfOverflow="True"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" 
                    Background="LightGreen" 
                    CornerRadius="5" Padding="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Общее использование топлива, л" FontSize="12"/>
                    <local_controls:RollingCounter x:Name="FuelCounter" ResetIfOverflow="True"/>
                </StackPanel>
            </Border>
        </Grid>

        <Button x:Name="MenuToggleButton" Width="30" Height="100" BorderThickness="1" 
                HorizontalAlignment="Right" VerticalAlignment="Center" Panel.ZIndex="15" Margin="0,0,0,0" 
                Click="MenuToggleButton_Click">
            <Button.RenderTransform>
                <TranslateTransform x:Name="ButtonTransform" X="0"/>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10,0,0,10">
                        <ContentPresenter HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text="▶" FontSize="16" HorizontalAlignment="Center" 
                       VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <RotateTransform x:Name="TextTransform" Angle="180"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Button>

        <Grid x:Name="SideMenu" Width="750" Background="#EEE" HorizontalAlignment="Right"
              VerticalAlignment="Stretch" Panel.ZIndex="10" RenderTransformOrigin="1,0">

            <Grid.RenderTransform>
                <TranslateTransform x:Name="MenuTransform" X="750"/>
            </Grid.RenderTransform>
            <ContentControl x:Name="PanelContent" Margin="0" 
                            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>