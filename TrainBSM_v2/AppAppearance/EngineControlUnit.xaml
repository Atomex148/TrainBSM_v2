<UserControl x:Class="TrainBSM_v2.AppAppearance.EngineControlUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainBSM_v2.AppAppearance"
             mc:Ignorable="d" 
             d:DesignHeight="761" d:DesignWidth="984">
    <Grid>
        <Grid x:Name="MainGrid" Background="#FFDBFFFE" Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:GaugeControl x:Name="LoadAtCurrentSpeed" Grid.Row="0" Grid.Column="0" Margin="10"/>
            <local:GaugeControl x:Name="FuelRackPosition" Grid.Row="0" Grid.Column="1" Margin="10"/>
            <local:GaugeControl x:Name="EngineRpm" Grid.Row="0" Grid.Column="2" Margin="10"/>
            <local:GaugeControl x:Name="IntakeManifoldPressure" Grid.Row="0" Grid.Column="3" Margin="10"/>
            <local:GaugeControl x:Name="IntakeAirTemperature" Grid.Row="1" Grid.Column="0" Margin="10"/>
            <local:GaugeControl x:Name="CoolantTemperature" Grid.Row="1" Grid.Column="1" Margin="10"/>
            <local:GaugeControl x:Name="OilTemperature" Grid.Row="1" Grid.Column="2" Margin="10"/>
            <local:GaugeControl x:Name="OilPressure" Grid.Row="1" Grid.Column="3" Margin="10"/>

            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                    Background="LightBlue"  
                    CornerRadius="5" Padding="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Общий пробег, ч" FontSize="12"/>
                    <local:RollingCounter x:Name="HoursCounter" ResetIfOverflow="True"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" 
                    Background="LightGreen" 
                    CornerRadius="5" Padding="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Общее использование топлива, л" FontSize="12"/>
                    <local:RollingCounter x:Name="FuelCounter" ResetIfOverflow="True"/>
                </StackPanel>
            </Border>
        </Grid>

        <Button x:Name="MenuToggleButton"
        Width="30"
        Height="100"
        BorderThickness="1"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        Panel.ZIndex="15"
        Margin="0,0,0,0"
        Click="MenuToggleButton_Click">
            <Button.RenderTransform>
                <TranslateTransform x:Name="ButtonTransform" X="0"/>
            </Button.RenderTransform>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10,0,0,10">
                        <ContentPresenter HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <TextBlock Text="▶"
               FontSize="16"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <RotateTransform x:Name="TextTransform" Angle="180"/>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Button>

        <Grid x:Name="SideMenu"
            Width="900"
            Background="#EEE"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Panel.ZIndex="10"
            RenderTransformOrigin="1,0">
            
            <Grid.RenderTransform>
                <TranslateTransform x:Name="MenuTransform" X="900"/>
            </Grid.RenderTransform>

            <ContentControl x:Name="PanelContent" 
                        Margin="0" 
                        VerticalAlignment="Stretch" 
                        HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</UserControl>