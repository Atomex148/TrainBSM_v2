<UserControl x:Class="TrainBSM_v2.AppAppearance.FromBruepUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local_controls="clr-namespace:TrainBSM_v2.AppAppearance.Controls"
             xmlns:new_controls="clr-namespace:TrainBSM_v2.AppAppearance.NewControls"
             mc:Ignorable="d" 
             d:DesignHeight="555" d:DesignWidth="784">
    <Grid x:Name="MainGrid" Background="#FFE8E8E8" Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="350"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <local_controls:RollingCounter Grid.Column="0" x:Name="GeneratorVoltage" NumbersCount="4" 
                                               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,10"
                                               SensorName="Напряжение генератора"/>
                <local_controls:RollingCounter Grid.Column="1" x:Name="GeneratorExcitationCurrentVoltage" NumbersCount="4"
                                               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,10" 
                                               SensorName="Возбуждение (ток)"/>
                <local_controls:RollingCounter Grid.Column="2" x:Name="GeneratorExcitationTractionVoltage" NumbersCount="4"
                                               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,10" 
                                               SensorName="Возбуждение (тяга)"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <new_controls:SimpleGauge Grid.Row="0" Grid.Column="0" x:Name="TEDGroup1Current" Margin="5"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          MinValue="0" MaxValue="1100" MajorTicks="12" LableFontSize="8"
                                          YellowZoneHigh="950" RedZoneHigh="1092" IsSignVisible="True" ValueFontSize="12"/>
                <TextBlock Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" Text="Ток 1ой группы ТЭД, А"
                           VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center"
                           FontWeight="Bold" Foreground="#FF424242" Margin="0,5,0,0"/>
                <new_controls:SimpleGauge Grid.Row="0" Grid.Column="1" x:Name="TEDGroup2Current" Margin="5"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          MinValue="0" MaxValue="1100" MajorTicks="12" LableFontSize="8"
                                          YellowZoneHigh="950" RedZoneHigh="1092" IsSignVisible="True" ValueFontSize="12"/>
                <TextBlock Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Text="Ток 2ой группы ТЭД, А"
                           VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center"
                           FontWeight="Bold" Foreground="#FF424242" Margin="0,5,0,0"/>
                <new_controls:SimpleGauge Grid.Row="0" Grid.Column="2" x:Name="TEDGroup3Current" Margin="5" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          MinValue="0" MaxValue="1100" MajorTicks="12" LableFontSize="8"
                                          YellowZoneHigh="950" RedZoneHigh="1092" IsSignVisible="True" ValueFontSize="12"/>
                <TextBlock Grid.Row="1" Grid.Column="2" TextWrapping="Wrap" Text="Ток 3ой группы ТЭД, А"
                           VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center"
                           FontWeight="Bold" Foreground="#FF424242" Margin="0,5,0,0"/>
                <new_controls:SimpleGauge Grid.Row="0" Grid.Column="3" x:Name="ControllerPosition" Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="3" TextWrapping="Wrap" Text="Положение контроллера машиниста, %"
                           VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"
                           FontWeight="Bold" Foreground="#FF424242" Margin="0,0,0,0"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <TabControl x:Name="MainTabControl" Background="Transparent" TabStripPlacement="Bottom" Margin="0,8,0,0">
                <TabItem Header="Управление и сигналы">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ControlIndicatorsItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local_controls:DiscreteIndicator 
                                        LabelText="{Binding Label}"
                                        IsActive="{Binding IsActive, Mode=TwoWay}"
                                        Margin="3,1,3,1"
                                        VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Реле и защиты">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="RelayIndicatorsItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local_controls:DiscreteIndicator 
                                        LabelText="{Binding Label}"
                                        IsActive="{Binding IsActive, Mode=TwoWay}"
                                        Margin="3,1,3,1"
                                        VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Блокировки и неисправности">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="SafetyIndicatorsItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <local_controls:DiscreteIndicator 
                                        LabelText="{Binding Label}"
                                        IsActive="{Binding IsActive, Mode=TwoWay}"
                                        Margin="3,1,3,1"
                                        VerticalAlignment="Center"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>