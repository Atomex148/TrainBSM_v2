<UserControl x:Class="TrainBSM_v2.AppAppearance.Controls.RollingNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="50" Width="30">
    <Canvas ClipToBounds="True" Background="Transparent">
        <StackPanel x:Name="DigitStack" Orientation="Vertical" Canvas.Top="0">
            <TextBlock Text="0" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="1" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="2" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="3" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="4" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="5" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="6" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="7" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="8" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
            <TextBlock Text="9" FontSize="40" Height="50" VerticalAlignment="Center" TextAlignment="Center" Foreground="Black"/>
        </StackPanel>
    </Canvas>
</UserControl>