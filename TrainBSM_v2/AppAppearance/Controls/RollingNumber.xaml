<UserControl x:Class="TrainBSM_v2.AppAppearance.Controls.RollingNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Окрема цифра з металевим обрамленням -->
    <Border CornerRadius="4" BorderThickness="1.5" BorderBrush="#FF666666" Margin="2,0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#FF2A2A2A" Offset="0"/>
                <GradientStop Color="#FF1A1A1A" Offset="0.5"/>
                <GradientStop Color="#FF252525" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Viewbox Stretch="Uniform">
            <Canvas Width="35" Height="50" ClipToBounds="True" Background="Transparent">
                <StackPanel x:Name="DigitStack" Orientation="Vertical" Canvas.Top="0" Width="35">
                    <TextBlock Text="0" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="1" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="2" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="3" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="4" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="5" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="6" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="7" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="8" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="9" FontSize="36" Height="50" FontWeight="Bold"
                               VerticalAlignment="Center" TextAlignment="Center" Foreground="#FF00FF00">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="0" Opacity="0.8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>
            </Canvas>
        </Viewbox>
    </Border>
</UserControl>