<UserControl x:Class="TrainBSM_v2.AppAppearance.Controls.DiscreteIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainBSM_v2.AppAppearance.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Ellipse x:Name="LightBulb" Grid.Column="0" Width="20" Height="20" Fill="Green" Stroke="Black" 
                 VerticalAlignment="Top" Margin="0,2,0,0" StrokeThickness="1"/>
        <TextBlock x:Name="Lable" Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0"
                   TextWrapping="Wrap"/>
    </Grid>
</UserControl>