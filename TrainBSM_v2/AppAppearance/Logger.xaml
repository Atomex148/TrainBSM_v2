<UserControl x:Class="TrainBSM_v2.AppAppearance.Logger"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local_controls="clr-namespace:TrainBSM_v2.AppAppearance.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="761" 
             d:DesignWidth="984">
    <Grid x:Name="MainGrid" Background="#FFDBFFFE">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" CornerRadius="4" Background="#FFC0FEFF" Margin="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="LogItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText}" FontFamily="Consolas" FontSize="14">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Type}" Value="Normal">
                                                <Setter Property="Foreground" Value="Black"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="Warning">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Background" Value="Orange"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Type}" Value="Error">
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="Background" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="1" Content="Очистить лог" Margin="10" HorizontalAlignment="Right" Padding="10,5"
                Click="ClearLogButton_Click"/>
    </Grid>
</UserControl>
